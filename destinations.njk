---
layout: base.njk
title: Destinations
pagination:
  data: collections.destinationPosts
  size: 2
  alias: pagedPosts
permalink: "/destinations{% if pagination.pageNumber > 0 %}/page{{ pagination.pageNumber }}{% endif %}/"
---

<h2>Destinations</h2>
<div class="card-container">
  {% for post in pagedPosts %}
    <div class="card">
      <img src="{{ post.feature_image }}" alt="{{ post.title }}" class="card-image">
      <div class="card-content">
        <h3>{{ post.title }}</h3>
        <p>{{ post.excerpt }}</p>
      </div>
    </div>
  {% endfor %}
</div>

<!-- Updated Pagination Navigation -->
<nav>
  <ul class="pagination">
    {% if pagination.href.previous %}
      <li><a href="{{ pagination.href.previous }}">Previous</a></li>
    {% endif %}
    {% if pagination.href.next %}
      <li><a href="{{ pagination.href.next }}">Next</a></li>
    {% endif %}
  </ul>
</nav>